FROM debian:12

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install minimal dependencies needed to run the installer
RUN apt-get update && apt-get install -y \
    sudo \
    python3 \
    && rm -rf /var/lib/apt/lists/*

# Create a non-root test user with sudo access
RUN useradd -m -s /bin/bash testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Copy all project files
COPY --chown=testuser:testuser install.sh /home/testuser/hf-nomad/
COPY --chown=testuser:testuser configure.sh /home/testuser/hf-nomad/
COPY --chown=testuser:testuser scripts/ /home/testuser/hf-nomad/scripts/
COPY --chown=testuser:testuser systemd/ /home/testuser/hf-nomad/systemd/
COPY --chown=testuser:testuser test/run-tests.sh /home/testuser/hf-nomad/

RUN chmod +x /home/testuser/hf-nomad/*.sh /home/testuser/hf-nomad/scripts/*

# Switch to test user
USER testuser
WORKDIR /home/testuser/hf-nomad

# Run the tests
CMD ["./run-tests.sh"]
